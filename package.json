{
  "name": "my-turborepo",
  "private": true,
  "scripts": {
    "build": "git submodule update --recursive --remote && turbo build --filter web",
    "dev": "turbo --filter web dev",
    "dev:admin": "turbo --filter admin dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\","
  },
  "devDependencies": {
    "prettier": "^3.3.3",
    "turbo": "^1.13.4"
  },
  "packageManager": "pnpm@9.0.4",
  "engines": {
    "node": ">=18"
  }
}
