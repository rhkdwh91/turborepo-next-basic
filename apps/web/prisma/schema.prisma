generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  uid          Int       @id @default(autoincrement())
  username     String    @unique
  email        String?   @unique
  password     String?
  level        Int?
  profileImage String?
  createAt     DateTime  @default(now()) @db.DateTime(0)
  updateAt     DateTime  @default(now()) @db.DateTime(0)
  comments     Comment[]
  posts        Post[]
  oauthToken   OauthToken[]
  writerApplication WriterApplication[]
}

model OauthToken {
  userUid Int     @id
  user    User    @relation(fields: [userUid], references: [uid])
  provider String?
  id  String?  @unique
  createAt DateTime @default(now()) @db.DateTime(0)
  updateAt DateTime @default(now()) @db.DateTime(0)
}

enum ApplicationType {
  RECEIPT
  ACCEPTING
  ACCEPT
  REJECT
}

model WriterApplication {
  uid     Int @id @default(autoincrement())
  userUid Int
  user    User  @relation(fields: [userUid], references: [uid])
  status  ApplicationType
  content Json?
  createAt DateTime @default(now()) @db.DateTime(0)
  updateAt DateTime @default(now()) @db.DateTime(0)
}

model Post {
  uid      Int       @id @default(autoincrement())
  title    String?
  content  String?   @db.LongText
  createAt DateTime  @default(now()) @db.DateTime(0)
  updateAt DateTime  @default(now()) @db.DateTime(0)
  tags     Json?
  userUid  Int
  comments Comment[]
  user     User      @relation(fields: [userUid], references: [uid])
  postView  PostView?
}

model PostView {
  count  Int   @default(0)
  postUid  Int   @id
  post     Post  @relation(fields: [postUid], references: [uid])
  createAt DateTime @default(now()) @db.DateTime(0)
  updateAt DateTime @default(now()) @db.DateTime(0)
}

model Comment {
  uid      Int      @id @default(autoincrement())
  content  String?
  postUid  Int
  createAt DateTime @default(now()) @db.DateTime(0)
  updateAt DateTime @default(now()) @db.DateTime(0)
  userUid  Int
  post     Post     @relation(fields: [postUid], references: [uid])
  user     User     @relation(fields: [userUid], references: [uid])
}

model Category {
  uid Int @id @default(autoincrement())
  name String @unique
  value String
  tags Tag[]
  createAt DateTime @default(now()) @db.DateTime(0)
  updateAt DateTime @default(now()) @db.DateTime(0)
}

model Tag {
  uid      Int      @id @default(autoincrement())
  name     String   @unique
  value    String
  categoryUid Int?
  category Category? @relation(fields: [categoryUid], references: [uid])
  createAt DateTime @default(now()) @db.DateTime(0)
  updateAt DateTime @default(now()) @db.DateTime(0)
}
