datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
generator client {
  provider = "prisma-client-js"
}
model User {
  uid Int @id @default(autoincrement())
  username String @unique
  email String? @unique
  password String
  level Int?
  profileImage String?
  comments Comment[]
  posts Post[]
  createAt DateTime @default(dbgenerated("NOW()")) @db.DateTime //@default(now())
  updateAt DateTime @default(dbgenerated("NOW() ON UPDATE NOW()")) @db.DateTime //@updatedAt
}
model Post {
  uid    Int     @id @default(autoincrement())
  title String?
  content String? @db.LongText
  username String?
  user User? @relation(fields: [userUid], references: [uid])
  userUid Int? @unique
  tags Json?
  createAt DateTime @default(dbgenerated("NOW()")) @db.DateTime //@default(now())
  updateAt DateTime @default(dbgenerated("NOW() ON UPDATE NOW()")) @db.DateTime //@updatedAt
  comments Comment[]
}
model Comment {
  uid Int @id @default(autoincrement())
  content String?
  user User @relation(fields: [userUid], references: [uid])
  post Post @relation(fields: [postUid], references: [uid])
  userUid Int @unique
  postUid Int @unique
  createAt DateTime @default(dbgenerated("NOW()")) @db.DateTime //@default(now())
  updateAt DateTime @default(dbgenerated("NOW() ON UPDATE NOW()")) @db.DateTime //@updatedAt
}
model Tag {
  uid Int @id @default(autoincrement())
  name String @unique
  value String
  createAt DateTime @default(dbgenerated("NOW()")) @db.DateTime //@default(now())
  updateAt DateTime @default(dbgenerated("NOW() ON UPDATE NOW()")) @db.DateTime //@updatedAt
}